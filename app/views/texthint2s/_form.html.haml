= form_for @texthint2 do |f|
  - if @texthint2.errors.any?
    #error_explanation
      %h2= "#{pluralize(@texthint2.errors.count, "error")} prohibited this texthint from being saved:"
      %ul
        - @texthint2.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :message
    = f.text_field :message
  .actions
    = f.submit 'Save'
